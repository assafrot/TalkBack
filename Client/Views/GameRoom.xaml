            <Button VerticalContentAlignment="Top"  Command="{Binding ChooseCheckerCommand}" CommandParameter="6" Background="AntiqueWhite"  HorizontalAlignment="Left" Height="146" Margin="291,9,0,0" VerticalAlignment="Top" Width="31">
